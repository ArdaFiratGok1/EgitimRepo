@{
    ViewData["Title"] = "Eğitim Maskotu Ana Sayfa";
}

@section Styles {
    <style>
        
        .hero-section {
            background-color: #2b2b2b;
            background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.08) 1px, transparent 0);
            background-size: 25px 25px;
            color: #fff;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        .hero-content {
            min-height: 85vh;
            display: flex;
            align-items: center;
        }

        .hero-section .display-4 {
            font-weight: 700;
        }

        .hero-section .text-highlight {
            color: var(--primary-color);
        }

        .btn-primary-custom {
            background-color: var(--primary-color);
            border: none;
            border-radius: 50px;
            padding: 1rem 2.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            color: white;
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(255, 107, 107, 0.4);
                background-color: #ff5252;
            }

        .btn-outline-light-custom {
            border-radius: 50px;
            padding: 1rem 2.5rem;
            font-weight: 600;
            border-width: 2px;
        }

            .btn-outline-light-custom:hover {
                background-color: white;
                color: #2b2b2b;
            }

        .feature-card {
            background-color: #f8f9fa;
            border-radius: var(--border-radius-md);
            border: none;
            transition: all 0.3s ease;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.08);
            }

            .feature-card .fas {
                color: var(--primary-color);
            }

        .hero-animation {
            animation: float 4s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .brain-glow-wrapper {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 160px;
            height: 160px;
        }

            .brain-glow-wrapper .fas {
                position: relative;
                z-index: 2;
            }

            .brain-glow-wrapper::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background-color: transparent;
                border: 3px solid rgba(78, 205, 196, 0.5);
                border-radius: 50%;
                animation: glow-pulse 3s ease-out infinite;
                z-index: 1;
            }

        @@keyframes glow-pulse {
            0% {
                transform: scale(0.8);
                opacity: 0.7;
            }

            100% {
                transform: scale(2);
                opacity: 0;
            }
        }

        .main-container-fluid {
            width: 100vw;
            margin: 0;
            padding: 0;
            position: relative;
            left: 50%;
            right: 50%;
            margin-left: -50vw;
            margin-right: -50vw;
        }

        .learning-step-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.07);
            transition: all 0.3s ease;
            overflow: hidden;
            position: relative;
            display: flex;
            flex-direction: column;
        }

            .learning-step-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(0,0,0,0.12);
            }

        .step-header {
            padding: 2rem 1.5rem 1rem;
            text-align: center;
        }

        .step-number {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 50%;
            font-weight: bold;
            font-size: 1.5em;
            margin-bottom: 1rem;
        }

        .step-body {
            padding: 0 1.5rem 1rem;
            text-align: center;
            flex-grow: 1;
        }

        .step-description {
            color: #666;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .step-features {
            text-align: left;
            margin-bottom: 1rem;
            font-size: 0.9em;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }
            .feature-item i {
                margin-right: 0.5rem;
            }

        .step-footer {
            padding: 0 1.5rem 1.5rem;
            margin-top: auto;
        }

         .step-footer .btn {
            width: 100%;
            font-weight: 600;
            border-radius: 50px;
        }

    </style>
}

<div class="main-container-fluid">
    <div class="hero-section">
        <div class="container-fluid px-4 px-lg-5 hero-content">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-7 col-xl-6 text-center text-lg-start">
                    <h1 class="display-4 fw-bold text-white mb-4">
                        Eğitim Maskotu ile<br>
                        <span class="text-highlight">Öğrenme Potansiyelini Keşfet</span>
                    </h1>
                    <p class="lead text-white-50 mb-5">
                        Kişiselleştirilmiş yol haritaları, interaktif testler, akıllı soru-cevap ve münazara simülasyonları ile
                        öğrenme yolculuğunuzu yeniden şekillendirin.
                    </p>
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start">
                        <a href="@Url.Action("Index", "AIAgent")" class="btn btn-primary-custom btn-lg">
                            <i class="fas fa-rocket me-2"></i>
                            Yol Haritamı Oluştur
                        </a>
                        <a href="#features" class="btn btn-outline-light btn-outline-light-custom btn-lg">
                            <i class="fas fa-info-circle me-2"></i>
                            Daha Fazla Bilgi
                        </a>
                    </div>
                </div>
                <div class="col-lg-5 col-xl-4 d-none d-lg-block">
                    <div class="hero-animation d-flex justify-content-end">
                        <div class="brain-glow-wrapper">
                            <i class="fas fa-brain fa-8x" style="color: rgba(78, 205, 196, 0.7);"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="learning-path" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold" style="color: var(--heading-color);">Öğrenme Yolculuğunuz</h2>
                <p class="lead text-muted">3 aşamada konuyu tam olarak öğrenin ve ustalaşın</p>
            </div>
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="learning-step-card h-100">
                        <div class="step-header">
                            <div class="step-number" style="background: linear-gradient(135deg, var(--secondary-color) 0%, #57CC99 100%);">1</div>
                            <h4 class="step-title">Yol Haritanı Oluştur</h4>
                        </div>
                        <div class="step-body">
                            <p class="step-description">
                                AI ile kişiselleştirilmiş yol haritası oluşturun. Video, makale,
                                açıklamalar ve testler ile konuyu adım adım öğrenin.
                            </p>
                            <div class="step-features">
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Kişisel öğrenme planı</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Video ve makale kaynakları</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> İlerleme takibi</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Modül bazlı testler</div>

                            </div>
                        </div>
                        <div class="step-footer">
                            <a href="@Url.Action("Index", "AIAgent")" class="btn btn-outline-dark">
                                Yol Haritanı Oluştur
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="learning-step-card h-100">
                        <div class="step-header">
                            <div class="step-number" style="background: linear-gradient(135deg, var(--primary-color) 0%, #ff8e8e 100%);">2</div>
                            <h4 class="step-title">Öğretmen ile Test et</h4>
                        </div>
                        <div class="step-body">
                            <p class="step-description">
                                Sanal öğretmeniniz ile soru-cevap yaparak öğrendiklerinizi pekiştirin. Sokratik yöntemle bilginizi derinleştirin!
                            </p>
                            <div class="step-features">
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Sokratik öğretim yöntemi</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Kişiselleştirilmiş sorular</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Anlık geri bildirim</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Gerçek bir sözlü deneyimi</div>

                            </div>
                        </div>
                        <div class="step-footer">
                            <a href="@Url.Action("Index", "Sokratik")" class="btn btn-outline-dark">
                                Soru-Cevap'a Başla
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="learning-step-card h-100">
                        <div class="step-header">
                            <div class="step-number" style="background: linear-gradient(135deg, var(--warning-color) 0%, #ffd452 100%);">3</div>
                            <h4 class="step-title">Konunu Savun</h4>
                        </div>
                        <div class="step-body">
                            <p class="step-description">
                                AI ile münazara yaparak konu hakkındaki görüşlerinizi güçlendirin. Konu hakkındaki yetkinliğinizi test ederek argüman geliştirme
                                becerilerinizi test edin.
                            </p>
                            <div class="step-features">
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Gerçekçi münazara deneyimi</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Argüman analizi</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Detaylı performans raporu</div>
                                <div class="feature-item"><i class="fas fa-check text-success"></i> Güçlü ve zayıf yönleriniz</div>

                            </div>
                        </div>
                        <div class="step-footer">
                            <a href="@Url.Action("Index", "Munazara")" class="btn btn-outline-dark">
                                Münazaraya Başla
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="features" class="features-section py-5">
        <div class="container-fluid px-4 px-lg-5">
            <div class="text-center mb-5">
                <h2 class="fw-bold display-5">Platform Özellikleri</h2>
                <p class="lead text-muted">Eğitim Maskotu'nun sunduğu avantajlar</p>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 col-xl-3 mb-4">
                    <div class="feature-card text-center p-4 h-100">
                        <i class="fas fa-map-signs fa-3x mb-3"></i>
                        <h5 class="fw-bold">Kişisel Yol Haritası</h5>
                        <p class="text-muted">
                            Eğitim Maskotu, seviyenize ve hedeflerinize özel, adım adım ilerleyen bir öğrenme planı hazırlar.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-xl-3 mb-4">
                    <div class="feature-card text-center p-4 h-100">
                        <i class="fas fa-question-circle fa-3x mb-3"></i>
                        <h5 class="fw-bold">İnteraktif Testler</h5>
                        <p class="text-muted">
                            Sokratik diyaloglar ve çoktan seçmeli sınavlarla öğrendiklerinizi anında pekiştirin.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-xl-3 mb-4">
                    <div class="feature-card text-center p-4 h-100">
                        <i class="fas fa-comments fa-3x mb-3"></i>
                        <h5 class="fw-bold">Akıllı Münazara</h5>
                        <p class="text-muted">
                            AI ile münazara yaparak belirlenen konu hakkında argüman geliştirme ve eleştirel düşünme becerilerinizi test edin.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section class="cta-section py-5 bg-light">
        <div class="container-fluid px-4 px-lg-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="card border-0 shadow-lg" style="border-radius: 20px; background: linear-gradient(135deg, #4ECDC4 0%, #57CC99 100%);">
                        <div class="card-body text-center text-white p-5">
                            <h2 class="fw-bold mb-3 display-6">Öğrenme Yolculuğuna Bugün Başla</h2>
                            <p class="lead mb-4">
                                Sadece bir konu belirle, gerisini Eğitim Maskotu halletsin.
                            </p>
                            <a href="@Url.Action("Index", "AIAgent")" class="btn btn-light btn-lg" style="border-radius: 50px; color: var(--secondary-color); font-weight: 600;">
                                <i class="fas fa-play me-2"></i>
                                İlk Yol Haritamı Oluştur
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
