@model EgitimMaskotuApp.Models.SokratikStartViewModel
@{
    ViewData["Title"] = "Sokratik Öğretim - AI Destekli Öğrenme";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Ana Başlık -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="fas fa-question-circle fa-4x text-success mb-3"></i>
                    <h1 class="display-5 fw-bold text-success">AI Sokratik Öğretmen</h1>
                    <p class="lead text-muted">
                        Sanal öğretmeninizle sorular üzerinden derinlemesine öğrenin
                    </p>
                </div>
            </div>

            <!-- Özellikler -->
            <div class="row mb-5">
                <div class="col-md-4 text-center">
                    <div class="feature-card p-4">
                        <i class="fas fa-graduation-cap fa-3x text-primary mb-3"></i>
                        <h5>Sokratik Yöntem</h5>
                        <p class="text-muted">
                            Sorular sorarak öğrenmenizi derinleştirin
                        </p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="feature-card p-4">
                        <i class="fas fa-brain fa-3x text-warning mb-3"></i>
                        <h5>Kişisel Rehberlik</h5>
                        <p class="text-muted">
                            Sanal öğretmeniniz sizin seviyenize uygun sorular sorar
                        </p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="feature-card p-4">
                        <i class="fas fa-lightbulb fa-3x text-info mb-3"></i>
                        <h5>Anlayarak Öğrenin</h5>
                        <p class="text-muted">
                            Ezberlemek yerine düşünerek öğrenin
                        </p>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; border-radius: 20px 20px 0 0;">
                    <h3 class="mb-0">
                        <i class="fas fa-play me-2"></i>
                        Öğrenme Seansınızı Başlatın
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Start" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger border-0 shadow-sm mb-4">
                                <h6 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Lütfen aşağıdaki hataları düzeltin:
                                </h6>
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Konu -->
                        <div class="mb-4">
                            <label asp-for="Konu" class="form-label fw-bold">
                                Öğrenmek İstediğiniz Konu *
                            </label>
                            <textarea asp-for="Konu"
                                      class="form-control form-control-lg @(ViewData.ModelState["Konu"]?.Errors.Any() == true ? "is-invalid" : "")"
                                      rows="4"
                                      placeholder="Örn: Solunum sistemi, Osmanlı İmparatorluğu, Kuantum fiziği, Fransız Devrimi, Programlama mantığı..."
                                      style="border-radius: 12px;"></textarea>
                            @if (ViewData.ModelState["Konu"]?.Errors.Any() == true)
                            {
                                <div class="invalid-feedback">
                                    @ViewData.ModelState["Konu"].Errors.First().ErrorMessage
                                </div>
                            }
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Öğrenmek istediğiniz konuyu detaylı bir şekilde yazın
                            </div>
                        </div>

                        <!-- Sokratik Yöntem Açıklaması -->
                        <div class="alert alert-info border-0 shadow-sm mb-4" style="border-radius: 12px;">
                            <h6 class="alert-heading">
                                <i class="fas fa-question-circle me-2"></i>
                                Sokratik Yöntem Nedir?
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="mb-0">
                                        <li>Sanal öğretmeniniz size konuyla ilgili sorular soracak</li>
                                        <li>Verdiğiniz cevaplara göre yeni sorular yöneltecek</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="mb-0">
                                        <li>Bu şekilde konuyu derinlemesine öğreneceksiniz</li>
                                        <li>Eksik bilgileriniz tespit edilip tamamlanacak</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3" style="border-radius: 12px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border: none;">
                                <i class="fas fa-play me-2"></i>
                                AI Öğretmenle Öğrenmeye Başla
                            </button>
                            <small class="text-center text-muted mt-2">
                                <i class="fas fa-clock me-1"></i>
                                Öğrenme seansınız yaklaşık 10 dakika sürecek
                            </small>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Öğrenme İpuçları -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card bg-light border-0" style="border-radius: 15px;">
                        <div class="card-body p-4">
                            <h5 class="text-center mb-4">
                                <i class="fas fa-lightbulb me-2"></i>
                                Etkili Öğrenme İpuçları
                            </h5>
                            <div class="row text-center">
                                <div class="col-md-6">
                                    <div class="step-item mb-3">
                                        <div class="step-number bg-info">!</div>
                                        <h6>Samimi Olun</h6>
                                        <p class="small text-muted">
                                            Dürüst ve samimi cevaplar verin. "Bilmiyorum" demekten çekinmeyin
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="step-item mb-3">
                                        <div class="step-number bg-warning">!</div>
                                        <h6>Detaylı Yanıt</h6>
                                        <p class="small text-muted">
                                            Sorulara açık ve detaylı yanıt verin, anlamadığınız noktalarda soru sorun
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Öğrenme Süreci -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0"
                         style="background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
                border-radius: 15px;">
                        <div class="card-body p-4">
                            <h5 class="text-center mb-4">
                                <i class="fas fa-route me-2"></i>
                                Öğrenme Süreciniz Nasıl Olacak?
                            </h5>
                            <!-- Buraya justify-content-center ekledik -->
                            <div class="row text-center justify-content-center">
                                <div class="col-md-3">
                                    <div class="step-item mb-3">
                                        <div class="step-number">1</div>
                                        <h6>Soru</h6>
                                        <p class="small text-muted">Toplamda 8 adet soru sorulacak</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="step-item mb-3">
                                        <div class="step-number">2</div>
                                        <h6>Geri Bildirim</h6>
                                        <p class="small text-muted">Her cevabınıza geri bildirim alacaksınız</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="step-item mb-3">
                                        <div class="step-number">3</div>
                                        <h6>Adım Adım</h6>
                                        <p class="small text-muted">Konuyu adım adım öğreneceksiniz</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .feature-card {
        border-radius: 15px;
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    .step-item {
        position: relative;
    }

    .step-number {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border-radius: 50%;
        font-weight: bold;
        font-size: 1.2em;
        margin-bottom: 15px;
    }

        .step-number.bg-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        }

        .step-number.bg-warning {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%) !important;
        }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .card {
        border-radius: 20px;
    }

    body {
        background-color: #d6eddd !important;
    }

    .popular-topic {
        padding: 15px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .popular-topic:hover {
            background-color: #f8f9fa;
            transform: translateY(-5px);
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form validation
        const form = document.querySelector('form');
        const topicInput = document.querySelector('textarea[name="Konu"]');

        form.addEventListener('submit', function(e) {
            if (topicInput.value.trim().length < 5) {
                e.preventDefault();
                alert('Lütfen en az 5 karakter uzunluğunda bir konu girin.');
                topicInput.focus();
            }
        });

        // Smooth scroll for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}