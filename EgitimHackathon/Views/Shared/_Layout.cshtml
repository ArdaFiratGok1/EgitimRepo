<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eğitim Maskotu</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* === DEĞİŞİKLİK: "Yaratıcı Keşif" Renk Paleti === */
        :root {
            --primary-color: #FF6B6B; /* Canlı Mercan/Turuncu */
            --secondary-color: #4ECDC4; /* Derin Turkuaz */
            --success-color: #57CC99; /* Canlı Yeşil */
            --danger-color: #E63946; /* Güçlü Kırmızı */
            --warning-color: #FFC914; /* Altın Sarısı */

            --background-color: #FDFDFF; /* Çok Hafif Eflatunlu Beyaz */
            --text-color: #3D3D3D; /* Koyu Kömür Rengi */
            --heading-color: #2b2b2b; /* Daha da Koyu Başlık */
            --border-color: #EAEAEA; /* İnce Çizgi Rengi */

            --border-radius-md: 0.75rem; /* 12px */
        }

        /* === STICKY FOOTER FIX === */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            display: flex;
            flex-direction: column;
        }

        .wrapper {
            flex: 1 0 auto;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        .footer-custom {
            flex-shrink: 0;
            background-color: var(--heading-color);
            color: #ccc;
            padding: 2.5rem 0;
            margin-top: auto;
        }

        h1, h2, h3, h4, h5, h6, .navbar-brand {
            font-family: 'Poppins', sans-serif;
            color: var(--heading-color);
        }

        /* === DEĞİŞİKLİK: Yeni Renk Paletine Uygun Navbar Tasarımı === */
        .navbar-custom {
            background-color: white;
            border-bottom: 1px solid var(--border-color);
            padding: 0.75rem 0;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

            .navbar-custom .navbar-brand {
                color: var(--secondary-color) !important; /* Turkuaz Marka Rengi */
                font-weight: 700;
                font-size: 1.5rem;
            }

            .navbar-custom .nav-link {
                color: #555;
                font-weight: 600;
                transition: color 0.2s ease;
            }

                .navbar-custom .nav-link:hover,
                .navbar-custom .nav-link.active {
                    color: var(--primary-color); /* Vurgu Rengi Mercan */
                }

                .navbar-custom .nav-link .fas {
                    color: var(--secondary-color); /* İkonlara Turkuaz Rengi */
                }

        main {
            padding-bottom: 1rem;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white navbar-custom">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-brain me-2"></i> Eğitim Maskotu
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-graduation-cap me-1"></i>Ana Sayfa
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AIAgent" asp-action="Index">
                                    <i class="fas fa-graduation-cap me-1"></i>Öğrenme Yol Haritası
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Sokratik" asp-action="Index">
                                    <i class="fas fa-question-circle me-1"></i>Sokratik Öğretim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Munazara" asp-action="Index">
                                    <i class="fas fa-comments me-1"></i>Münazara
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Hakkimda">
                                    <i class="fas fa-graduation-cap me-1"></i>Hakkımda
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer-custom text-center">
        <div class="container">
            <p>&copy; 2025 - Eğitim Maskotu by Arda Fırat Gök</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>