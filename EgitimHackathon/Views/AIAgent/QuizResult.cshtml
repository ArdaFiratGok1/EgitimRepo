@model EgitimMaskotuApp.Models.QuizSession

@{
    ViewData["Title"] = "Sınav Sonucu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4 p-md-5 text-center">
                    <h2 class="mb-3">Sınav Sonucu: @Model.Topic</h2>
                    <h1 class="display-3 fw-bold text-success">@Model.Score / 100</h1>
                    <p class="lead">@Model.Questions.Count sorudan @(Model.Score / (100 / Model.Questions.Count)) tanesini doğru bildiniz.</p>
                </div>
            </div>

            <div class="mt-5">
                <h3 class="mb-4 text-center">Cevapların Analizi</h3>
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var q = Model.Questions[i];
                    var userAnswerIndex = Model.UserAnswers.ContainsKey(i) ? Model.UserAnswers[i] : -1;
                    var isCorrect = userAnswerIndex != -1 && q.AnswerOptions[userAnswerIndex].IsCorrect;

                    <div class="card mb-3 @(isCorrect ? "border-success" : "border-danger")">
                        <div class="card-header">
                            <strong>Soru @(i + 1):</strong> @q.Question
                        </div>
                        <div class="card-body">
                            @for (int j = 0; j < q.AnswerOptions.Count; j++)
                            {
                                var opt = q.AnswerOptions[j];
                                var alertClass = "";
                                if (opt.IsCorrect) { alertClass = "alert-success"; }
                                else if (j == userAnswerIndex) { alertClass = "alert-danger"; }

                                <div class="alert @alertClass">
                                    @if (j == userAnswerIndex)
                                    {
                                        <i class="fas @(isCorrect ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                                    }
                                    @opt.Text
                                    @if (Model.IsSubmitted)
                                    {
                                        <small class="d-block mt-2 opacity-75"><em>@opt.Rationale</em></small>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("Dashboard")" class="btn btn-primary">Yol Haritasına Dön</a>
            </div>
        </div>
    </div>
</div>