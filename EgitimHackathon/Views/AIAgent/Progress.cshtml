@model EgitimMaskotuApp.Models.ProgressModel

@{
    ViewData["Title"] = "İlerleme Raporu";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold">İlerleme Raporu</h1>
            <p class="lead text-muted">"@Model.Session.MainTopic" yol haritasındaki ilerlemen</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info border-0 shadow-sm">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-robot fa-2x text-info"></i>
                    </div>
                    <div>
                        <h6 class="alert-heading mb-1">AI Değerlendirmesi</h6>
                        <p class="mb-0">@Model.ProgressAnalysis</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="text-success">@Model.CompletedNodes.Count / @Model.Session.Nodes.Count</h4>
                    <small class="text-muted">Tamamlanan Konu</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-percentage fa-2x text-primary mb-2"></i>
                    <h4 class="text-primary">@Model.CompletionPercentage%</h4>
                    <small class="text-muted">Tamamlama Yüzdesi</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-2x text-info mb-2"></i>
                    <h4 class="text-info">@(Model.TotalTimeSpentMinutes) dk</h4>
                    <small class="text-muted">Harcanan Süre</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-bullseye fa-2x text-warning mb-2"></i>
                    <h4 class="text-warning">@(Model.Session.Nodes.Count - Model.CompletedNodes.Count)</h4>
                    <small class="text-muted">Kalan Konu</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-check-double me-2"></i>Çözülen Testler</h5>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.QuizHistory != null && Model.QuizHistory.Any())
                    {
                        @foreach (var test in Model.QuizHistory)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@test.Topic</h6>
                                    <small class="text-muted">@test.CompletedAt.ToString("dd MMMM yyyy, HH:mm")</small>
                                </div>
                                <p class="mb-1">
                                    Puan:
                                    <strong class="@(test.Score >= 70 ? "text-success" : test.Score >= 50 ? "text-warning" : "text-danger")">
                                        @test.Score / 100
                                    </strong>
                                    <span class="text-muted ms-2">
                                        (@test.CorrectAnswers / @test.TotalQuestions doğru)
                                    </span>

                                    @* YENİ EKLENEN KISIM: Süre göstergesi *@
                                    <span class="text-muted ms-2 border-start ps-2">
                                        <i class="fas fa-stopwatch"></i>
                                        @TimeSpan.FromSeconds(test.TimeSpentSeconds).ToString(@"mm\:ss") dk
                                    </span>
                                </p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="list-group-item text-center text-muted">
                            Henüz çözülmüş bir test bulunmuyor.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Tamamlanan Konular</h5>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.CompletedNodes.Any())
                    {
                        @foreach (var node in Model.CompletedNodes)
                        {
                            <a href="@Url.Action("NodeDetail", new { nodeId = node.Id })" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <strong>@node.Title</strong>
                                    <small class="text-muted ms-2">(@node.Category)</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">@node.Difficulty</span>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="list-group-item">Henüz tamamlanan bir konu yok.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i> Yol Haritasına Dön
        </a>
    </div>
</div>