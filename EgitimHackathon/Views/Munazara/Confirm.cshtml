@model EgitimMaskotuApp.Models.MunazaraSession
@{
    ViewData["Title"] = "Münazara Onayı";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-header text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 20px 20px 0 0;">
                    <h2 class="mb-0">
                        <i class="fas fa-check-circle me-3"></i>
                        Münazara Konusu Hazır!
                    </h2>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <i class="fas fa-robot fa-4x text-primary mb-3"></i>
                        <p class="lead">Münazara konunuz analiz edildi. Aşağıdaki düzenlemeyi onaylarsanız münazaraya başlayabiliriz.</p>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card mb-4" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); border: none;">
                                <div class="card-body text-center p-4">
                                    <h4 class="mb-3">
                                        <i class="fas fa-topic me-2"></i>
                                        Münazara Konusu
                                    </h4>
                                    <h3 class="text-primary fw-bold">@Model.Konu</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card h-100" style="border: 3px solid #007bff; border-radius: 15px;">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-user fa-3x text-primary"></i>
                                    </div>
                                    <h5 class="card-title text-primary fw-bold">SİZİN TARAFINIZ</h5>
                                    <p class="card-text fs-5">@Model.KullaniciTarafi</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100" style="border: 3px solid #dc3545; border-radius: 15px;">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-robot fa-3x text-danger"></i>
                                    </div>
                                    <h5 class="card-title text-danger fw-bold">AI'IN TARAFI</h5>
                                    <p class="card-text fs-5">@Model.AiTarafi</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mt-4" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-clock me-2"></i>
                            Münazara Kuralları
                        </h6>
                        <ul class="mb-0">
                            <li><strong>3 Round:</strong> Her bir taraf 3'er mesaj gönderecek</li>
                            <li><strong>Yapıcı Tartışma:</strong> Saygılı ve bilimsel yaklaşım benimseyin</li>
                            <li><strong>Argüman Odaklı:</strong> Kişisel değil, konuya odaklanın</li>
                            <li><strong>Zaman Sınırı:</strong> Her mesaj için makul sürede yanıt verin</li>
                        </ul>
                    </div>

                    <div class="text-center mt-4">
                        <form asp-action="ConfirmStart" method="post" class="d-inline me-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-play me-2"></i>
                                Münazaraya Başla
                            </button>
                        </form>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>